<?xml version="1.0"?>
<openerp>
    <data>

        <record id="epps_account_settings.epps_user_upgrade_button" model="ir.ui.view">
            <field name="name">epps_user_upgrade_button</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="epps_user.view_user_form_epps" />
            <field name="arch" type="xml">
                <xpath expr="//div[@class='user_count_wrapper']" position="inside">
                    <button string="Upgrade to get more" type="action" name="%(epps_account_settings.action_epps_account_settings)d"
                        class="oe_stat_button" icon="fa-arrow-up" help="Upgrade"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
