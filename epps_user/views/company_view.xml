<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_company_form_user_number" model="ir.ui.view">
            <field name="name">res.company.form.user.number</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='account_grp']" position="after">
                    <group string="Number of users">
                        <field name="max_number_of_users"/>
                        <field name="number_of_users"/>
                        <field name="max_space_gb"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
